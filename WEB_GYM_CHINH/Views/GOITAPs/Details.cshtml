@model WEB_GYM_CHINH.Models.GOITAP

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold text-shadow"><i class="fas fa-info-circle me-2"></i>Chi Tiết Gói Tập</h2>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <h4 class="mb-3">Thông Tin Gói Tập</h4>
            <hr class="mb-4" />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TenGoiTap)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenGoiTap)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ImageGoi)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageGoi))
                    {
                        <img src="~/Images/@Model.ImageGoi" alt="@Model.TenGoiTap" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">Không có ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MoTa)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MoTa)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.GiaTien)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GiaTien)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.LOAIGOITAP.TenLoaiGoi)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LOAIGOITAP.TenLoaiGoi)</dd>
            </dl>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="@Url.Action("Edit", new { id = Model.MaGoiTap })" class="btn btn-primary btn-lg btn-shadow btn-hover"><i class="fas fa-edit me-2"></i>Sửa</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg btn-shadow btn-hover"><i class="fas fa-arrow-left me-2"></i>Quay Lại</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Text shadow for header */
    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* Enhanced card shadow */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 0.5rem;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
    }

    /* Button shadow and hover effects */
    .btn-shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-hover {
        transition: all 0.3s ease;
    }
    .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        filter: brightness(1.1);
    }

    /* Definition list styling */
    .row dt, .row dd {
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    .row dt:last-child, .row dd:last-child {
        border-bottom: none;
    }
    .row dt {
        color: #343a40;
    }

    /* Image thumbnail styling */
    .img-thumbnail {
        transition: transform 0.3s ease;
    }
    .img-thumbnail:hover {
        transform: scale(1.1);
    }
</style>

<script>
    // Smooth hover effect for buttons
    document.querySelectorAll('.btn-hover').forEach(button => {
        button.addEventListener('mouseover', () => {
            button.style.transition = 'all 0.3s ease';
        });
        button.addEventListener('mouseout', () => {
            button.style.transform = 'translateY(0)';
            button.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
        });
    });
</script>