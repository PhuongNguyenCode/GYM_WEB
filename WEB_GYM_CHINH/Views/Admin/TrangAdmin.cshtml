@{

    ViewBag.Title = "Trang Admin";

    Layout = "~/Views/Shared/_Home.cshtml";

}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWixZZC5uqbW5jS+0i+FcU5n3lM7O9z1gA5I5X5f5z5e5f5" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Bảng Điều Khiển Admin</h2>
    <div class="row">
        <!-- Tạo Gói Tập -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "GOITAPs")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-dumbbell fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Tạo Gói Tập</h5>
                    <p class="card-text">Quản lý các gói tập luyện.</p>
                </div>
            </a>
        </div>

        <!-- Đăng Ký Thành Viên -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "DK_THANHVIEN")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Đăng Ký Thành Viên</h5>
                    <p class="card-text">Thêm thành viên mới.</p>
                </div>
            </a>
        </div>

        <!-- Tạo Loại Gói Tập -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "LoaiGoiTap")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Tạo Loại Gói Tập</h5>
                    <p class="card-text">Quản lý loại gói tập.</p>
                </div>
            </a>
        </div>

        <!-- Đăng Ký Tài Khoản -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("DangKy", "Users")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-user-cog fa-3x mb-3 text-warning"></i>
                    <h5 class="card-title">Đăng Ký Tài Khoản</h5>
                    <p class="card-text">Tạo tài khoản người dùng.</p>
                </div>
            </a>
        </div>

        <!-- Điểm Danh -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "CHAMCONG")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x mb-3 text-danger"></i>
                    <h5 class="card-title">Điểm Danh</h5>
                    <p class="card-text">Ghi nhận điểm danh.</p>
                </div>
            </a>
        </div>

        <!-- Xem Trang Chủ -->
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("TrangChu", "Home")" class="card text-decoration-none text-dark h-100 shadow-sm hover-effect">
                <div class="card-body text-center">
                    <i class="fas fa-home fa-3x mb-3 text-secondary"></i>
                    <h5 class="card-title">Xem Trang Chủ</h5>
                    <p class="card-text">Trở về trang chủ.</p>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Custom CSS for hover effect -->
<style>
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
        transition: all 0.3s ease;
    }

    .card {
        transition: all 0.3s ease;
    }
</style>