@{
    ViewBag.Title = "Đăng Ký Gói Tập";
    Layout = "~/Views/Shared/_Home.cshtml";
}
@model IEnumerable<WEB_GYM_CHINH.Models.GOITAP>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký Gói Tập</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/DkyGoiT.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Thông báo thành công hoặc lỗi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- PHẦN CHỌN GÓI TẬP -->
    <section class="package-section">
        <h1 class="package-title">Chọn Gói Tập Của Bạn</h1>
        @if (!Model.Any())
        {
            <p class="text-warning text-center">Hiện tại không có gói tập nào để hiển thị.</p>
        }
        else
        {
            <div class="package-options">
                @foreach (var item in Model)
                {
                    <div class="package-card">
                        <img src="@Url.Content(string.IsNullOrEmpty(item.ImageGoi) ? "~/Images/default.jpg" : "~/Images/" + item.ImageGoi)" alt="@item.TenGoiTap" class="package-img" />
                        <div class="package-content">
                            <h3>@item.TenGoiTap</h3>
                            <p class="price">@((item.GiaTien / 30).ToString())K/ngày</p>
                            <p class="duration">Tổng: @item.GiaTien.ToString()K</p>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <!-- PHẦN ĐĂNG KÝ -->
    <div class="container" id="register-form">
        <!-- FORM BÊN TRÁI -->
        <div class="form-container">
            <form action="@Url.Action("DangKy", "Users")" method="post">
                <div class="form-group">
                    <label for="fullname">Họ và Tên <span class="required">*</span></label>
                    <input type="text" id="fullname" name="HoTen" placeholder="Nhập họ và tên" required class="form-input" />
                </div>
                <div class="form-group">
                    <label for="phone">Số Điện Thoại <span class="required">*</span></label>
                    <input type="tel" id="phone" name="SDT" placeholder="Nhập số điện thoại" required class="form-input" />
                </div>
                <div class="form-group">
                    <label for="email">Email <span class="required">*</span></label>
                    <input type="email" id="email" name="Email" placeholder="Nhập email" required class="form-input" />
                </div>
                <div class="form-group">
                    <label>Dịch Vụ Quan Tâm</label>
                    <div class="radio-group">
                        <label><input type="radio" name="service" value="gym" required /> GYM</label>
                        <label><input type="radio" name="service" value="yoga" /> YOGA</label>
                        <label><input type="radio" name="service" value="fitness" /> Fitness</label>
                        <label><input type="radio" name="service" value="kickboxing" /> Kick Boxing</label>
                        <label><input type="radio" name="service" value="ngoithuyen" /> Ngồi Thuyền</label>
                        <label><input type="radio" name="service" value="xonghoi" /> Xông hơi</label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Cơ Sở Gần Nhất</label>
                    <div class="radio-group column">
                        <label><input type="radio" name="branch" value="cs2" required /> Cơ sở 2: Tòa M1, Vinhomes Metropolis, Số 29 Liễu Giai, Ba Đình, Hà Nội</label>
                        <label><input type="radio" name="branch" value="cs3" /> Cơ sở 3: Tòa The Zei, Số 8 Lê Đức Thọ, Mỹ Đình, Nam Từ Liêm, Hà Nội</label>
                        <label><input type="radio" name="branch" value="cs6" /> Cơ sở 6: Số 677 Lạc Long Quân, Phú Thượng, Tây Hồ, Hà Nội</label>
                        <label><input type="radio" name="branch" value="cs7" /> Cơ sở 7: Số 52 Nguyễn Vĩnh Bảo, Yên Hòa, Cầu Giấy, Hà Nội</label>
                    </div>
                </div>
                <button type="submit" class="form-button">Đăng Ký Ngay</button>
            </form>
        </div>

        <!-- ẢNH BÊN PHẢI -->
        <div class="image-container">
            <div class="overlay-text">
                Đưa cuộc sống của bạn lên một tầm cao mới<br />
                với kickboxing tại King Fitness
            </div>
        </div>
    </div>

    <!-- SECTION BANNER THỨ HAI -->
    <section class="hero-second">
        <div class="hero-content">
            <p class="small-title">Train with the best</p>
            <h2 class="main-title">
                TẬP LUYỆN.<br />
                LÀ CHÌA KHÓA CỦA LỐI SỐNG LÀNH MẠNH.
            </h2>
            <form action="@Url.Action("DangNhap", "Users")" method="post">
                <button class="cta-btn">Tham Gia Ngay</button>
            </form>
        </div>
    </section>

    <!-- MAIN JS -->
    <script src="~/Scripts/DkyGoiTap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>