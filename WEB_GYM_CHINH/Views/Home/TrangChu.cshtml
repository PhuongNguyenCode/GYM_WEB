                        <img src="~/Images/uudai.jpg" alt="Giảm 20% cho học viên mới" class="promo-img">
                        <div class="card-body text-center">
                            <h5 class="card-title">Giảm 20% cho học viên mới</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="promo-card bg-neon-card">
                        <img src="~/Images/uudai.jpg" alt="Tặng áo tập gói 6 tháng" class="promo-img">
                        <div class="card-body text-center">
                            <h5 class="card-title">Tặng áo tập gói 6 tháng</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="promo-card bg-neon-card-alt" id="countdown-card">
                        <img src="~/Images/uudai.jpg" alt="Ưu đãi hết hạn" class="promo-img">
                        <div class="card-body text-center">
                            <h5 class="card-title">Ưu đãi hết hạn trong: <span id="timer"></span></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bộ môn -->
    <section class="py-5" id="courses" style="background: linear-gradient(135deg, rgba(57, 255, 20, 0.1), rgba(45, 45, 45, 0.9));">
        <div class="container">
            <h2 class="text-center mb-4 text-neon">BỘ MÔN</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-neon course-card">
                        <img src="~/Images/kickboxing.jpg" class="card-img-top" alt="Kick Boxing" data-modal="kickboxModal">
                        <div class="card-body text-center">
                            <h4 class="card-title text-neon-alt">KICK BOXING</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-neon course-card">
                        <img src="~/Images/boxing.jpg" class="card-img-top" alt="Boxing" data-modal="boxingModal">
