                <p class="text-white">HLV Nghiêm chuyên sâu về kỹ thuật chỏ và gối, nâng cao thể lực toàn diện.</p>
            </div>
        </div>
    </div>
</div>

<script>
    // Countdown Timer
    function updateTimer() {
        const countDownDate = new Date("July 13, 2025 23:59:59").getTime();
        const now = new Date().getTime();
        const distance = countDownDate - now;

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("timer").innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

        if (distance < 0) {
            document.getElementById("timer").innerHTML = "Hết hạn";
        }
    }
    setInterval(updateTimer, 1000);

    // Trainer Slider
    let slideIndex = 0;
    const slides = document.getElementsByClassName("hvl-slides")[0];
    const totalSlides = slides.children.length;

    function showSlides() {
        if (slideIndex >= totalSlides) slideIndex = 0;
        if (slideIndex < 0) slideIndex = totalSlides - 1;
        slides.style.transform = `translateX(-${slideIndex * 33.33}%)`;
    }

    function nextTrainer() {
        slideIndex++;
        showSlides();
    }

    function prevTrainer() {
        slideIndex--;
        showSlides();
    }

    // Modal Trigger
    document.querySelectorAll('[data-modal]').forEach(item => {
        item.addEventListener('click', () => {
            const modalId = item.getAttribute('data-modal');
            const modal = new bootstrap.Modal(document.getElementById(modalId));
            modal.show();
        });
    });
</script>